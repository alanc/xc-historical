DEPLIBS = 
HEADERS = imakemdep.h 

#ifdef LocalConfigFiles
LOCALFILES = LocalConfigFiles
#endif

DEFFILES = \
site.def

RULEFILES = \
Imake.rules \
ibmLib.rules \
noop.rules \
oldlib.rules \
osfLib.rules \
sgiLib.rules \
sunLib.rules \
sv4Lib.rules

TMPLFILES = \
Imake.tmpl \
Library.tmpl \
Project.tmpl \
Server.tmpl \
ibmLib.tmpl \
osfLib.tmpl \
sunLib.tmpl \
sv4Lib.tmpl

CFFILES = \
DGUX.cf \
Mips.cf \
Oki.cf \
apollo.cf \
bsd.cf \
convex.cf \
cray.cf \
generic.cf \
hp.cf \
ibm.cf \
luna.cf \
macII.cf \
moto.cf \
osf1.cf \
pegasus.cf \
rtcchack.bac \
sgi.cf \
sony.cf \
sun.cf \
ultrix.cf \
usl.cf \
x386.cf

INSTFILES = $(HEADERS) $(RULEFILES) $(TMPLFILES) $(DEFFILES) $(CFFILES) $(LOCALFILES)
INCLUDES = -I$(BUILDINCDIR)
#ifdef CppCmd
CPP_PROGRAM = CppCmd
CPP_DEFINES = -DCPP_PROGRAM=\"$(CPP_PROGRAM)\"
#endif
DEFINES = $(SIGNAL_DEFINES) $(BOOTSTRAPCFLAGS) $(CPP_DEFINES)

#ifdef MacIIArchitecture
XBSDLIB = /**/
#endif

#undef ImakeDependency
#define ImakeDependency(dummy) @@\
Makefile::  ProgramTargetName(imake)

SimpleProgramTarget(imake)

BuildIncludes($(HEADERS),config,..)

InstallMultipleDestFlags(install,$(INSTFILES),$(CONFIGDIR),$(INSTDATFLAGS))

depend::

clean::
	$(RM) ProgramTargetName(ccimake)
