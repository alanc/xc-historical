/* Turn off directory search for RCS */
.DIRECTORIES:

BOOTSTRAPCFLAGS = -DM4310
             AS = as
             CC = cc 
            CPP = /lib/cpp
             LD = ld
           LINT = lint
        INSTALL = install
           TAGS = ctags
             RM = rm -f
             MV = mv
             LN = ln -s
