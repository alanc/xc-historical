RANLIBINSTFLAGS = 
             AR = ar clq
             LS = ls
       LINTOPTS = -axz
    LINTLIBFLAG = -C
           MAKE = make
STD_CPP_DEFINES = StandardSystemDefines
    STD_DEFINES = StandardDefines


/* This defines the server you want */
