#define IHaveSubdirs
#define PassCDebugFlags 'CDEBUGFLAGS=$(CDEBUGFLAGS)'

/*  CDEBUGFLAGS = LibaryCDebugFlags */
    CDEBUGFLAGS = -g
        SUBDIRS = clients
       INCLUDES = -I. -I$(XRMSRC) -I$(XLIBSRC) -I$(TOP) -I$(TOP)/X11
#if BigEndianArchitecture == YES
        DEFINES = -DLIBDIR=\"$(LIBDIR)\" -DBIGENDIAN
#else
        DEFINES = -DLIBDIR=\"$(LIBDIR)\"
#endif
   INSTALLFLAGS = -m 0644

HEADERS = \
	Atoms.h \
	ButtonBox.h \
	Cascade.h \
	Clock.h \
	Command.h \
	Intrinsic.h \
	Knob.h \
	Label.h \
	Load.h \
	Misc.h \
	Popup.h \
	Quarks.h \
	Scroll.h \
	Shell.h \
	Text.h \
	TopLevel.h \
	TM.h \
	VPane.h

SRCS = \
	Alloc.c \
	ArgList.c \
	AsciiSink.c \
	ButtonBox.c \
	Cascade.c \
	Clock.c \
	Command.c \
	Cursors.c \
	DiskSrc.c \
	Error.c \
	Event.c \
	GCManager.c \
	Geometry.c \
	GrayPixmap.c \
	Initialize.c \
	Intrinsic.c \
	Knob.c \
	Label.c \
	Load.c \
	NextEvent.c \
	Popup.c \
	Resources.c \
	Scroll.c \
	StringSrc.c \
	Text.c \
	TextKinds.c \
	TMparse.c \
	TMstate.c \
	VPane.c

OBJS = \
	Alloc.o \
	ArgList.o \
	AsciiSink.o \
	ButtonBox.o \
	Cascade.o \
	Clock.o \
	Command.o \
	Cursors.o \
	DiskSrc.o \
	Error.o \
	Event.o \
	GCManager.o \
	Geometry.o \
	GrayPixmap.o \
	Initialize.o \
	Intrinsic.o \
	Knob.o \
	Label.o \
	Load.o \
	NextEvent.o \
	Popup.o \
	Resources.o \
	Scroll.o \
	StringSrc.o \
	Text.o \
	TextKinds.o \
	TMparse.o \
	TMstate.o \
	VPane.o

#if DebugLibXtk && ProfileLibXtk
DebuggedAndProfiledLibraryObjectRule()
#else
# if DebugLibXtk
DebuggedLibraryObjectRule()
# else
#  if ProfileLibXtk
ProfiledLibraryObjectRule()
#  else
NormalLibraryObjectRule()
#  endif
# endif
#endif

NormalLibraryTarget(Xtk,$(OBJS))
AliasedLibraryTarget(Xtk,Xtk11)
LintLibraryTarget(Xtk,$(SRCS))
InstallLibrary(Xtk,$(USRLIBDIR))
InstallLibraryAlias(Xtk,Xtk11,$(USRLIBDIR))
InstallLintLibrary(Xtk,$(LINTLIBDIR))

#if ProfileLibXtk
ProfiledLibraryTarget(Xtk,$(OBJS))
AliasedLibraryTarget(Xtk_p,Xtk11_p)
InstallLibrary(Xtk_p,$(USRLIBDIR))
InstallLibraryAlias(Xtk_p,Xtk11_p,$(USRLIBDIR))
#endif

#if DebugLibXtk
DebuggedLibraryTarget(Xtk,$(OBJS))
AliasedLibraryTarget(Xtk_d,Xtk11_d)
#endif

MakeSubdirs($(SUBDIRS))
DependSubdirs($(SUBDIRS))

InstallMultiple($(HEADERS),$(INCDIR))

DependTarget()

lint:
	$(LINT) -buz ${INCLUDES} \
		-DLIBDIR=\"${LIBDIR}\" \
		${SRCS} \
		$(XLIBSRC)/llib-lX.ln
