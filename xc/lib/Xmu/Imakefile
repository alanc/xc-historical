	VisCmap.c \
	WidgetNode.c \
	Xct.c \
	sharedlib.c 

OBJS = \
	AllCmap.o \
	Atoms.o \
	ClientWin.o \
	CloseHook.o \
	CmapAlloc.o \
	CrCmap.o \
	CrPixFBit.o \
	CursorName.o \
	CvtCache.o \
	CvtStdSel.o \
	DefErrMsg.o \
	DelCmap.o \
	DisplayQue.o \
	Distinct.o \
