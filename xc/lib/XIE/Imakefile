#define DoNormalLib NormalLibXie
#define DoSharedLib SharedLibXie
#define DoDebugLib DebugLibXie
#define DoProfileLib ProfileLibXie
#include <Library.tmpl>

#ifdef SharedXieReqs
REQUIREDLIBS = SharedXieReqs
#endif

#if Malloc0ReturnsNull
ALLOC_DEFINES = -DMALLOC_0_RETURNS_NULL
#endif

DEFINES = $(ALLOC_DEFINES)

HEADERS = XIElib.h \
          XIElibint.h

SRCS = abort.c \
       await.c \
       clientdata.c \
       colorlist.c \
       conven.c \
       elements.c \
       free.c \
       errors.c \
       events.c \
       ieee.c \
       init.c \
       lut.c \
       photoflo.c \
       photomap.c \
       photospace.c \
       roi.c \
       technique.c \
       utils.c

OBJS = abort.o \
       await.o \
       clientdata.o \
       colorlist.o \
       conven.o \
       elements.o \
       errors.o \
       events.o \
       free.o \
       ieee.o \
       init.o \
       lut.o \
       photoflo.o \
       photomap.o \
       photospace.o \
       roi.o \
       technique.o \
       utils.o

LibraryObjectRule()

#if DoSharedLib
#if DoNormalLib
SharedLibraryTarget(XIE,$(SOXIEREV),$(OBJS),shared,..)
#else
SharedLibraryTarget(XIE,$(SOXIEREV),$(OBJS),.,.)
#endif
InstallSharedLibrary(XIE,$(SOXIEREV),$(SHLIBDIR))
#endif
#if DoNormalLib
NormalLibraryTarget(XIE,$(OBJS))
InstallLibrary(XIE,$(USRLIBDIR))
#endif
#if DoProfileLib
ProfiledLibraryTarget(XIE,$(OBJS))
InstallLibrary(XIE_p,$(USRLIBDIR))
#endif
#if DoDebugLib
DebuggedLibraryTarget(XIE,$(OBJS))
InstallLibrary(XIE_d,$(USRLIBDIR))
#endif

LintLibraryTarget(XIE,$(SRCS))
InstallLintLibrary(XIE,$(LINTLIBDIR))

BuildIncludes($(HEADERS),extensions,..)
InstallMultiple($(HEADERS),$(INCDIR)/extensions)

DependTarget()

NormalLintTarget($(SRCS))
