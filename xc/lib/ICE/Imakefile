#define DoNormalLib NormalLibICE
#define DoSharedLib SharedLibICE
#define DoDebugLib DebugLibICE
#define DoProfileLib ProfileLibICE
#include <Library.tmpl>

#if (SystemV || SystemV4) && !HasSockets
CONN_DEFINES = -DTCPCONN
#else
CONN_DEFINES = ConnectionFlags
#endif

#if HasBSD44Sockets
SOCK_DEFINES = -DBSD44SOCKETS
#endif

HEADERS = ICE.h \
          ICEproto.h \
          ICElib.h \
          ICElibint.h

SRCS = connect.c \
       connutil.c \
       accept.c \
       register.c \
       protosetup.c \
       process.c \
       ping.c \
       error.c \
       iceauth.c \
       misc.c

OBJS = connect.o \
       connutil.o \
       accept.o \
       register.o \
       protosetup.o \
       process.o \
       ping.o \
       error.o \
       iceauth.o \
       misc.o

LibraryObjectRule()

#if DoSharedLib
#if DoNormalLib
SharedLibraryTarget(ICE,$(SOICEREV),$(OBJS),shared,..)
#else
SharedLibraryTarget(ICE,$(SOICEREV),$(OBJS),.,.)
#endif
InstallSharedLibrary(ICE,$(SOICEREV),$(SHLIBDIR))
#endif
#if DoNormalLib
NormalLibraryTarget(ICE,$(OBJS))
InstallLibrary(ICE,$(USRLIBDIR))
#endif
#if DoProfileLib
ProfiledLibraryTarget(ICE,$(OBJS))
InstallLibrary(ICE_p,$(USRLIBDIR))
#endif
#if DoDebugLib
DebuggedLibraryTarget(ICE,$(OBJS))
InstallLibrary(ICE_d,$(USRLIBDIR))
#endif

SpecialCLibObjectRule(connect,$(ICONFIGFILES),$(CONN_DEFINES))
SpecialCLibObjectRule(accept,$(ICONFIGFILES),$(CONN_DEFINES))
SpecialCLibObjectRule(connutil,$(ICONFIGFILES),$(CONN_DEFINES) $(SOCK_DEFINES))

LintLibraryTarget(ICE,$(SRCS))
InstallLintLibrary(ICE,$(LINTLIBDIR))

BuildIncludes($(HEADERS),ICE,..)
InstallMultiple($(HEADERS),$(INCDIR)/ICE)

DependTarget()

NormalLintTarget($(SRCS))
