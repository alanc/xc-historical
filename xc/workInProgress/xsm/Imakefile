XCOMM $XConsortium: Imakefile,v 1.10 94/07/07 15:15:00 mor Exp $
#if !defined(RshCmd)
#if SystemV
#ifdef HPArchitecture
#define	RshCmd remsh
#else
#define	RshCmd rcmd
#endif
#else
#define	RshCmd rsh
#endif
#endif

         RSHCMD = RshCmd

        DEPLIBS = XawClientDepLibs
LOCAL_LIBRARIES = XawClientLibs

           SRCS1 = auth.c choose.c info.c list.c mainwin.c misc.c name.c \
		   printhex.c remote.c restart.c save.c saveutil.c xsm.c \
		   xtwatch.c
                   
           OBJS1 = auth.o choose.o info.o list.o mainwin.o misc.o name.o \
		   printhex.o remote.o restart.o save.o saveutil.o xsm.o \
		   xtwatch.o

          PROGS1 = xsm

           SRCS2 = xsmclient.c
           OBJS2 = xsmclient.o
          PROGS2 = xsmclient

            SRCS = $(SRCS1) $(SRCS2)
            OBJS = $(OBJS1) $(OBJS2)
        PROGRAMS = $(PROGS1) $(PROGS2)

ComplexProgramTarget_1(xsm,$(LOCAL_LIBRARIES),NullParameter)
ComplexProgramTarget_2(xsmclient,$(LOCAL_LIBRARIES),NullParameter)
SpecialCObjectRule(remote,NullParameter,'-DRSHCMD="$(RSHCMD)"')
#if !HasPutenv
SpecialCObjectRule(misc,NullParameter,-DNOPUTENV)
#endif
SpecialCObjectRule(restart,$(_NOOP_),'-DSYSTEM_INIT_FILE="'$(XSMDIR)'/system.xsm"')
InstallNonExecFile(system.xsm,$(XSMDIR))
InstallAppDefaults(XSm)
