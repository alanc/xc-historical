	copyright.h \
	keysym.h \
	keysymdef.h \
	DECkeysym.h

IMPORTS = \
	$(OLDXLIBSRC)/X10.h \
	$(XLIBSRC)/Xlib.h \
	$(XLIBSRC)/Xresource.h \
