EXPORTS = \
	X.h \
	XWDFile.h \
	Xatom.h \
	Xmd.h \
	Xos.h \
	Xproto.h \
	Xprotostr.h \
	copyright.h \
	keysym.h \
	keysymdef.h

IMPORTS = \
	$(OLDXMENUSRC)/XMenu.h \
	$(OLDXLIBSRC)/X10.h \
	$(XRMSRC)/Xresource.h \
	$(XLIBSRC)/Xlib.h \
	$(XLIBSRC)/Xutil.h \
	$(FONTSRC)/cursorfont.h \
	$(TOOLKITSRC)/AsciiText.h \
	$(TOOLKITSRC)/Atoms.h \
	$(TOOLKITSRC)/Box.h \
	$(TOOLKITSRC)/Cardinals.h \
	$(TOOLKITSRC)/Cascade.h \
	$(TOOLKITSRC)/Clock.h \
	$(TOOLKITSRC)/Command.h \
	$(TOOLKITSRC)/Composite.h \
	$(TOOLKITSRC)/Constraint.h \
	$(TOOLKITSRC)/Convert.h \
	$(TOOLKITSRC)/Core.h \
	$(TOOLKITSRC)/Dialog.h \
	$(TOOLKITSRC)/Form.h \
	$(TOOLKITSRC)/Grip.h \
	$(TOOLKITSRC)/Intrinsic.h \
	$(TOOLKITSRC)/IntrinsicP.h \
	$(TOOLKITSRC)/Label.h \
	$(TOOLKITSRC)/Load.h \
	$(TOOLKITSRC)/Misc.h \
	$(TOOLKITSRC)/Popup.h \
	$(TOOLKITSRC)/Quarks.h \
