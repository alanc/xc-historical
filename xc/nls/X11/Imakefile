INSTALLFLAGS = $(INSTDATFLAGS)

#ifndef BuildXimp
#define BuildXimp NO
#endif
#ifndef BuildXsi
#if !BuildXimp
#define BuildXsi YES
#endif
#endif

all::

depend::

#if BuildXsi

FILES = Xsi/C \
	Xsi/ja_JP.jis7 Xsi/ja_JP.jis8 Xsi/ja_JP.mscode Xsi/ja_JP.ujis \
	Xsi/ko_KR.euc \
	Xsi/lt_LN.bit7 Xsi/lt_LN.bit8 \
	Xsi/wr_WR.ct \
	Xsi/zh_CN.ugb Xsi/zh_TW.big5 \
	Xsi/nls.dir Xsi/nls.alias

InstallMultiple($(FILES),$(NLSDIR))

#endif /* BuildXsi */

#if BuildXimp

CFILES = C/codeset.dat C/fontset.dat
JEUCFILES = ja_JP.EUC/codeset.dat ja_JP.EUC/fontset.dat

InstallMultiple($(CFILES),$(NLSDIR)/C)
InstallMultiple($(JEUCFILES),$(NLSDIR)/ja_JP.EUC)

#endif /* BuildXimp */
