#define BuildWithXTest

#ifdef BuildWithXTest
DEFINES = -DXTEST
#ifdef NormalLibXTest /* test if pre-R6 config files */
GENLIB = $(XTESTLIB)
GENDEPLIB = $(DEPXTESTLIB)
#else
GENLIB = -lXtst
#endif
#endif
#ifdef BuildWithXTrap
DEFINES = -DXTRAP
GENLIB = -lXTrap $(XTOOLLIB)
GENDEPLIB = $(DEPXTOOLLIB)
INCLUDES = -I$(INCDIR)
#endif
#ifdef BuildWithXTestExt1
DEFINES = -DXTESTEXT1
GENLIB =
GENDEPLIB =
#endif

        DEPLIBS = $(DEPXMULIB) $(DEPGENLIB) $(DEPXLIB)
LOCAL_LIBRARIES = $(XMULIB) $(GENLIB) $(XLIB)
  SYS_LIBRARIES = -lm

SimpleProgramTarget(a2x)

InstallNamedProg(DragonDictate,DragonDictate,$(BINDIR))

a2x.PS: a2x.ms
	$(TROFF) $(MSMACROS) a2x.ms > $@

clean::
	$(RM) a2x.PS
