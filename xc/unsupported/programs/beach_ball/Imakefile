#define PassCDebugFlags
#ifndef PexClientCDebugFlags
#define PexClientCDebugFlags OptimizedCDebugFlags
#endif

#ifndef PexClientDefines
#define PexClientDefines -DPEX_SI_PHIGS 
#endif

    CDEBUGFLAGS = PexClientCDebugFlags
            DEFINES = PexClientDefines

   PHIGS_LIBDIR = ../../../lib/PEX

       INCLUDES = -I. -I$(INCDIR) $(TOP_INCLUDES) -I$(TOP)/X11

      PHIGS_LIB = $(PHIGS_LIBDIR)/libphigs.a
LOCAL_LIBRARIES = $(PHIGS_LIB) $(XLIB)
  SYS_LIBRARIES = -lm

        DEPLIBS = $(PHIGS_LIB) $(DEPXLIB)

           SRCS = beach_ball.c clock.c spheres.c init_win.c
           OBJS = beach_ball.o clock.o spheres.o init_win.o
          PROGS = beach_ball

AllTarget( $(PROGS) )

NormalProgramTarget($(PROGS), $(OBJS), $(DEPLIBS), $(LOCAL_LIBRARIES), $(SYS_LIBRARIES))

DependTarget()
