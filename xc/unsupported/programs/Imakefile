#define IHaveSubdirs
#define PassCDebugFlags CDEBUGFLAGS="$(CDEBUGFLAGS)"

#if BuildPhigs
PHIGSDIRS = auto_box beach_ball gpc
#endif

/*
 * The ixx translator does not build under Sony NEWS-OS because of  
 * limitations in Sony's yacc.  Ixx also fails to build with the 
 * Sun C++ 4.0 compiler because it tickles compiler bugs.
 */

#if BuildFresco
#if defined(SonyArchitecture) || (HasSunCplusplus && CplusplusCompilerMajorVersion == 4)
FRESCODIRS = dish i2mif fdraw
#else
FRESCODIRS = dish i2mif ixx fdraw
#endif
#endif

SUBDIRS = beforelight ico listres maze puzzle showfont viewres xbiff xcalc \
	xcmstest xditview xedit xev xeyes xfontsel xgas xgc xload \
	xman xmessage xpr $(PHIGSDIRS) $(FRESCODIRS)

MakeSubdirs($(SUBDIRS))
DependSubdirs($(SUBDIRS))
