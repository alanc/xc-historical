SUSPEX_LIB_DIR  = ../../src/util
COMMON_DIR      = ../../src/common_sun
COMMON_OBJS = $(COMMON_DIR)/lut.o $(COMMON_DIR)/renderer.o
SHARED_MAIN_OBJS = main.o $(COMMON_OBJS)
SUSPEX_LIB = $(SUSPEX_LIB_DIR)/libSusPEX.a

CDEBUGFLAGS = -g
INCLUDES = -I. -I$(COMMON_DIR) 

PEXLIB=-lPEX5
LDLIBS = $(SUSPEX_LIB) $(PEXLIB) $(XMULIB) $(XLIB) -lm
LDOPTIONS = -L$(LIBDIR)

PROGS = copy_struct del_struct_el element_search \
	fetch_lines \
	get_struct_info get_lines_info \
	struct_edit struct_hier struct_ref struct_ref2

AllTarget($(PROGS))

$(SUSPEX_LIB):
	(cd $(SUSPEX_LIB_DIR); make)

$(COMMON_OBJS):
	(cd $(COMMON_DIR); make)

NormalProgramTarget(copy_struct, copy_struct.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(del_struct_el, del_struct_el.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(element_search, element_search.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(fetch_lines, fetch_lines.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(get_struct_info,get_struct_info.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(get_lines_info, get_lines_info.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(struct_edit,struct_edit.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(struct_hier,struct_hier.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(struct_ref, struct_ref.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(struct_ref2, struct_ref2.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)

DependTarget()

