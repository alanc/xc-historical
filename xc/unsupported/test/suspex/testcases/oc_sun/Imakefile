# imake file for oc

SUSPEX_LIB_DIR  = ../../src/util
COMMON_DIR      = ../../src/common_sun
COMMON_OBJS = $(COMMON_DIR)/lut.o $(COMMON_DIR)/renderer.o
SHARED_MAIN_OBJS = main.o workstation.o $(COMMON_OBJS)
SUSPEX_LIB = $(SUSPEX_LIB_DIR)/libSusPEX.a

CDEBUGFLAGS = -g
INCLUDES = -I. -I$(COMMON_DIR) 

PEXLIB=-lPEX5
LDLIBS = $(SUSPEX_LIB) $(PEXLIB) $(XMULIB) $(XLIB) -lm
LDOPTIONS = -L$(LIBDIR)

PROGS= atextAttr cell \
        edgeAttr encTextAttr \
        fa faData fasData faset font \
        interior intrAttr \
        line lineAttr lineSet markerAttr multiDraw \
        nurbCurve nurbSurf pfline \
        quadMesh sendoc shade sofas startoc struct \
        textAttr textExtent triStrip twoCircles

AllTarget($(PROGS))

$(SUSPEX_LIB):
	(cd $(SUSPEX_LIB_DIR); make)

$(COMMON_OBJS):
	(cd $(COMMON_DIR); make)

NormalProgramTarget(atextAttr, atextAttr.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(cell, cell.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(edgeAttr, edgeAttr.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(encTextAttr,encTextAttr.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(fa, fa.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(faData, faData.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(fasData, fasData.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(faset, faset.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(font, font.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(interior, interior.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(intrAttr, intrAttr.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(line, line.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(lineAttr, lineAttr.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(lineSet, lineSet.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(markerAttr, markerAttr.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(multiDraw, multiDraw.o $(COMMON_OBJS) workstation.o, $(SUSPEX_LIB),,)
NormalProgramTarget(nurbCurve, nurbCurve.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(nurbSurf, nurbSurf.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(pfline, pfline.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(quadMesh, quadMesh.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(sendoc, sendoc.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(shade, shade.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(sofas, sofas.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(startoc, startoc.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(struct, struct.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(textAttr, textAttr.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(textExtent, textExtent.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(triStrip, triStrip.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)
NormalProgramTarget(twoCircles, twoCircles.o $(SHARED_MAIN_OBJS), $(SUSPEX_LIB),,)

DependTarget()

