        DEPLIBS = FrescoClientDepLibs
LOCAL_LIBRARIES = FrescoClientLibs 

           SRCS = barrier.CCsuf \
		  box.CCsuf \
	  	  buttons.CCsuf \
		  check.CCsuf \
		  circle.CCsuf \
		  figviewer.CCsuf \
		  hello.CCsuf \
		  mtcircles.CCsuf \
		  narrow.CCsuf \
		  styles.CCsuf \
		  subpaths.CCsuf \
		  xtf.CCsuf 

           OBJS = barrier.Osuf \
		  box.Osuf \
	  	  buttons.Osuf \
		  check.Osuf \
		  circle.Osuf \
		  figviewer.Osuf \
		  hello.Osuf \
		  mtcircles.Osuf \
		  narrow.Osuf \
		  styles.Osuf \
		  subpaths.Osuf \
		  xtf.Osuf 

       EXAMPLES = barrier \
		  box \
	  	  buttons \
		  check \
		  circle \
		  figviewer \
		  hello \
		  mtcircles \
		  narrow \
		  styles \
		  subpaths \
 		  xtf

#if ThreadedX
  LOCAL_LDFLAGS = ThreadsLoadFlags
  SYS_LIBRARIES = ThreadsLibraries
#endif

ALL: $(EXAMPLES)

#define CplusplusSource
NormalCplusplusObjectRule()

#ifdef FrescoExample
#undef FrescoExample
#endif

#define FrescoExample(name)			@@\
NormalCplusplusProgramTarget(name,name.Osuf,$(DEPLIBS),$(LOCAL_LIBRARIES),NullParameter)

#define FrescoExampleWithLibs(name,libs)	@@\
NormalCplusplusProgramTarget(name,name.Osuf,$(DEPLIBS),libs $(LOCAL_LIBRARIES),NullParameter)

FrescoExample(barrier)
FrescoExample(box)
FrescoExample(buttons)
FrescoExample(check)
FrescoExample(circle)
FrescoExample(figviewer)
FrescoExample(hello)
FrescoExample(mtcircles)
FrescoExample(narrow)
FrescoExample(styles)
FrescoExample(subpaths)

FrescoExampleWithLibs(xtf, $(XTFLIB) XawClientLibs)

DependTarget()
