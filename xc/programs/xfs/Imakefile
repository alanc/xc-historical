XCOMM $XConsortium: Imakefile,v 1.17 93/07/12 18:07:43 rws Exp $
#undef ServerDefines
#include <Server.tmpl>
#define	IHaveSubdirs

OSDIR = os
OSLIB = $(OSDIR)/libos.a
DIFSDIR = difs
DIFSLIB = $(DIFSDIR)/libdifs.a
SYSLIBS =
#if defined(HPArchitecture) || defined(i386SVR3Architecture)
BSDEMUL = $(LIBSRC)/Berk/Berklib.o
#endif

FSDIRS = $(OSDIR) $(DIFSDIR) $(PCFDIRS)
FSLIBS = $(DIFSLIB) $(FONTLIB) $(DIFSLIB) $(OSLIB) $(BSDEMUL)
#ifdef MacIIArchitecture
MFSDIRS = MacFS
#endif

SUBDIRS = $(FSDIRS) $(MFSDIRS)

FSLIBDIR = $(LIBDIR)/fs
FSERRORS = $(FSLIBDIR)/fs-errors
DEFAULTFONTPATH = DefaultFontPath
SITE_CONFIG = -DDEFAULTFONTPATH=$(DEFAULTFONTPATH) -DFSERRORS=$(FSERRORS)

all:: fs config $(MFSDIRS)

ServerTarget(fs,$(FSDIRS),NullParameter,$(FSLIBS),$(SYSLIBS))

CppFileTarget(config,config.cpp,$(SITE_CONFIG),$(ICONFIGFILES))

InstallProgram(fs,$(BINDIR))

InstallManPage(fs,$(MANDIR))

#if InstallFSConfig
InstallNonExecFile(config,$(FSLIBDIR))
#endif

#if HasSaberC
saber_fs:
	XCOMM cd difs
	XCOMM make saber
	XCOMM cd ../os
	XCOMM make saber
	XCOMM cd ../../lib/font/bitmap
	XCOMM make saber
	XCOMM cd ../fontfile
	XCOMM make saber
	XCOMM cd ../fc
	XCOMM make saber
	XCOMM cd ../Speedo
	XCOMM make saber
	XCOMM cd ../Type1
	XCOMM make saber
	XCOMM cd ../util
	XCOMM make saber
	XCOMM unload atom.c miscutil.c
	XCOMM cd ../../../server
#endif

DependSubdirs($(SUBDIRS))

$(SUBDIRS):	FRC
	@cd $@; echo "making $@" ;	\
	$(MAKE) $(MFLAGS) PassCDebugFlags all

clean::
	$(RM) fs

FRC:
