        DEFINES = ConnectionFlags -DBINDIR=\"$(BINDIR)\"
LOCAL_LIBRARIES = $(XLIB)
          SRCS1 = xinit.c 
          OBJS1 = xinit.o 
       PROGRAMS = xinit startx

ComplexProgramTarget_1(xinit,$(XLIB),)

startx:  startx.cpp
	$(RM) startx
	$(CPP) $(STD_SYS_DEFINES) <startx.cpp | \
		sed '/^#  *[0-9][0-9]*  *.*$$/d' >startx
	chmod a+x startx

InstallProgram(startx,$(BINDIR))
