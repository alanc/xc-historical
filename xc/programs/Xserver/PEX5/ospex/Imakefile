#include <Server.tmpl>

##
##      Define a font path for PEX fonts.
##      This is coherent iff FONTDIR == FontDir
##

#ifdef FontDir
PEX_SITE_FONT_PATH = -DPEX_DEFAULT_FONTPATH=\"$(FONTDIR)/PEX\"
#else
PEX_SITE_FONT_PATH = /* nothing */
#endif

#ifndef PassCDebugFlags
#define PassCDebugFlags
#endif

#ifndef PexDipexDefines
#define PexDipexDefines
#endif

#ifndef PexDipexCDebugFlags
#define PexDipexCDebugFlags OptimizedCDebugFlags
#endif

.SUFFIXES:  .o  .a

RDR_STUBS = -DRENDER_CMDS
ST_STUBS = -DSTORE_CMDS

 CDEBUGFLAGS = PexDipexCDebugFlags
     DEFINES = ExtensionDefines PexDipexDefines

    LINTLIBS =	../../../../../server/dix/llib-ldix.ln \
		../../../../../server/os/4.2bsd/llib-los.ln \
		../../ddpex/mi/level4/llib-ldp4.ln \
		../../ddpex/mi/shared/llib-ldps.ln \
