#include <Server.tmpl>

#ifndef PexDdpexCDebugFlags
#define PexDdpexCDebugFlags ServerCDebugFlags
#endif

#-D defines for ddpex:
#	DDTEST turns on some fprintf(stderr...)s for debugging
#	PEX_DEFAULT_FONTPATH defines the default path to PEX fonts

    DEFINES = PexDdpexDefines -DPEX_DEFAULT_FONTPATH=\"$(FONTDIR)/PEX\"
CDEBUGFLAGS = PexDdpexCDebugFlags

  PEXSERVINC = ../../../include
  PEXINCLUDE = ../../../../../include/PEX
DDPEXINCLUDE = ../include

INCLUDES = -I. \
	-I$(DDPEXINCLUDE) \
	-I$(PEXINCLUDE) \
	-I$(INCLUDESRC) \
	-I$(PEXSERVINC) \
	-I$(SERVERSRC)/include

SRCS = miFont.c \
	miLUT.c \
	miLineLUT.c \
	miMarkLUT.c \
	miTextLUT.c \
	miEdgeLUT.c \
	miIntLUT.c \
	miPattLUT.c \
	miFontLUT.c \
	miViewLUT.c \
	miColrLUT.c \
	miClrApLUT.c \
	miLightLUT.c \
	miDCueLUT.c \
	miNS.c \
	miUtils.c \
	miMisc.c 

OBJS = miFont.o \
	miLUT.o \
	miLineLUT.o \
	miMarkLUT.o \
	miTextLUT.o \
	miEdgeLUT.o \
	miIntLUT.o \
	miPattLUT.o \
	miFontLUT.o \
	miViewLUT.o \
	miColrLUT.o \
	miClrApLUT.o \
	miLightLUT.o \
	miDCueLUT.o \
	miNS.o \
	miUtils.o \
	miMisc.o 

NormalLibraryObjectRule()

NormalLibraryTarget(ddpexs,$(OBJS))

LintLibraryTarget(dps, $(SRCS))
NormalLintTarget($(SRCS))

DependTarget()

