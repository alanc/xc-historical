#if XsunServer
XCOMM
XCOMM Sun server
XCOMM
#if UseSunWindowsInServer
SUNWINDOWSLIBS = -lsunwindow -lpixrect
#endif
SUBDIRS0 = MFBSubdirs
SUBDIRS1 = ddx/cfb
SUBDIRS2 = ddx/sun
SUNDIRS = $(SUBDIRS0) $(SUBDIRS1) $(SUBDIRS2) $(DEPDIRS)
SUNOBJS = ddx/sun/sunInit.o
SUNLIBS = ddx/sun/libsun.a CFB8Libs
SUNSYSLIBS = $(SYSLIBS) $(SUNWINDOWSLIBS)

ServerTarget(Xsun,$(SUNDIRS),$(SUNOBJS),$(SUNLIBS),$(SUNSYSLIBS))
#else
#if Xsun24Server
XCOMM
XCOMM Sun server
XCOMM
#if UseSunWindowsInServer
SUNWINDOWSLIBS = -lsunwindow -lpixrect
#endif
#if BuildXvExt
XVSUBDIRS = $(XVSRC)/ddx/sunrop
XVLIBS = $(XVSRC)/ddx/sunrop/libsunrop.a
#endif
SUBDIRS0 = MFBSubdirs
SUBDIRS1 = ddx/cfb ddx/cfb16 ddx/cfb32 $(XVSUBDIRS)
SUBDIRS2 = ddx/sun
SUNDIRS = $(SUBDIRS0) $(SUBDIRS1) $(SUBDIRS2) $(DEPDIRS)
SUNOBJS = ddx/sun/sunInit.o
SUNLIBS = ddx/sun/libsun.a CFBLibs $(XVLIBS)
SUNSYSLIBS = $(SYSLIBS) $(SUNWINDOWSLIBS)

ServerTarget(Xsun,$(SUNDIRS),$(SUNOBJS),$(SUNLIBS),$(SUNSYSLIBS))
#endif /* Xsun24Server */
#endif /* XsunServer */

