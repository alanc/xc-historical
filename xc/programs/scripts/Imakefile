         PROGRAMS = xmkmf makedepend

all:: $(PROGRAMS)

CppScriptTarget(xmkmf, -DCONFIGDIRSPEC=-I$(CONFIGDIR), $(ICONFIGFILES))
CppScriptTarget(mdepend, -DPREPROC='"'"$(PREPROCESSCMD)"'"', $(ICONFIGFILES))

makedepend:  mdepend
	$(RM) makedepend
	$(MV) mdepend makedepend 

InstallProgram(xmkmf,$(BINDIR))
InstallProgram(makedepend,$(BINDIR))

clean::
	$(RM) $(PROGRAMS)

depend::

install.man::

