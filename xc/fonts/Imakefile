#define IHaveSubdirs
#define PassCDebugFlags 'CDEBUGFLAGS=$(CDEBUGFLAGS)'

#if BuildFonts
FONTDIRS = bdf scaled
#endif

#if BuildPexExt
PEXDIRS = PEX
#endif

#if BuildFontServer
SERVERDIRS = server
#endif

/* clients must be built before font dirs */
SUBDIRS = lib clients $(FONTDIRS) $(PEXDIRS) $(SERVERDIRS)

MakeSubdirs($(SUBDIRS))
DependSubdirs($(SUBDIRS))
