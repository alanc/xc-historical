#define IHaveSubdirs
#define PassCDebugFlags 'CDEBUGFLAGS=$(CDEBUGFLAGS)'

#if BuildFonts | BuildServer | BuildFontServer
LIBDIRS = lib
#endif

#if BuildFonts
FONTDIRS = bdf scaled
#endif

#if BuildPexExt
PEXDIRS = PEX
#endif

/* tools must be built before font dirs */
        SUBDIRS = $(LIBDIRS) tools $(FONTDIRS) $(PEXDIRS)

MakeSubdirs($(SUBDIRS))
DependSubdirs($(SUBDIRS))
